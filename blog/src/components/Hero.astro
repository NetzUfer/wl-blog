---
interface Props {
  title: string;
  subtitle?: string;
  image?: string;
  primaryButtonText?: string;
  primaryButtonLink?: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
}

const { 
  title, 
  subtitle, 
  image = '/images/hero-background.jpg',
  primaryButtonText, 
  primaryButtonLink, 
  secondaryButtonText, 
  secondaryButtonLink 
} = Astro.props;
---

<section class="relative py-20 md:py-32 overflow-hidden">
  {image && (
    <div class="absolute inset-0 z-0">
      <img 
        src={image} 
        alt="" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
  )}
  
  <div class="container relative z-10 text-center text-white">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
      {title}
    </h1>
    
    {subtitle && (
      <p class="text-xl md:text-2xl max-w-3xl mx-auto mb-10 text-gray-100">
        {subtitle}
      </p>
    )}
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      {primaryButtonLink && primaryButtonText && (
        <a 
          href={primaryButtonLink} 
          class="btn-primary text-lg px-6 py-3"
        >
          {primaryButtonText}
        </a>
      )}
      
      {secondaryButtonLink && secondaryButtonText && (
        <a 
          href={secondaryButtonLink} 
          class="btn bg-white text-gray-800 hover:bg-gray-100 text-lg px-6 py-3"
        >
          {secondaryButtonText}
        </a>
      )}
    </div>
  </div>
</section>