---
interface Props {
  id: number;
  title: string;
  excerpt?: string;
  image?: string;
  category?: string;
  date: string;
}

const { id, title, excerpt, image, category, date } = Astro.props;
---

<article class="card h-full flex flex-col">
  {image && (
    <div class="aspect-video overflow-hidden">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform hover:scale-105"
      />
    </div>
  )}
  
  <div class="p-6 flex-grow flex flex-col">
    {category && (
      <span class="text-sm text-teal-600 font-medium mb-2">
        {category}
      </span>
    )}
    
    <h2 class="text-xl font-bold mb-3">
      <a href={`/blog/${id}`} class="hover:text-teal-600 transition-colors">
        {title}
      </a>
    </h2>
    
    {excerpt && <p class="text-gray-600 mb-4">{excerpt}</p>}
    
    <div class="text-sm text-gray-500 mt-auto">
      {date}
    </div>
  </div>
</article>