---
import MainLayout from '../../layouts/MainLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getPosts, getCategories } from '../../backend/db.js';

// Fetch posts from database
const posts = await getPosts({ limit: 12 });
const categories = await getCategories();
---

<MainLayout title="Blog">
  <section class="py-12">
    <div class="container">
      <h1 class="text-4xl font-bold mb-8">Blog</h1>
      
      <!-- Categories -->
      <div class="flex flex-wrap gap-2 mb-8">
        <a 
          href="/blog" 
          class="px-4 py-2 rounded-full bg-teal-600 text-white font-medium"
        >
          Alle
        </a>
        
        {categories.map(category => (
          <a 
            href={`/blog/category/${category.slug}`}
            class="px-4 py-2 rounded-full bg-gray-200 text-gray-800 font-medium hover:bg-gray-300 transition-colors"
          >
            {category.name}
          </a>
        ))}
      </div>
      
      <!-- Posts Grid -->
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map(post => (
            <PostCard
              title={post.title}
              slug={post.slug}
              excerpt={post.excerpt}
              image={post.image}
              category={post.category_name}
              categorySlug={post.category_slug}
              date={post.created_at}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-xl text-gray-600">Keine Beitru00e4ge gefunden.</p>
        </div>
      )}
    </div>
  </section>
</MainLayout>