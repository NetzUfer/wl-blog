---
import MainLayout from '../../../layouts/MainLayout.astro';
import PostCard from '../../../components/PostCard.astro';
import { getPosts, getCategories } from '../../../backend/db.js';

// Get the category slug from the URL
const { slug } = Astro.params;

// Fetch all categories
const categories = await getCategories();

// Find the current category
const currentCategory = categories.find(cat => cat.slug === slug);

// If category not found, redirect to blog page
if (!currentCategory) {
  return Astro.redirect('/blog');
}

// Fetch posts for this category
const posts = await getPosts({ category: slug });
---

<MainLayout 
  title={currentCategory.name}
  description={`Beitru00e4ge in der Kategorie ${currentCategory.name}`}
>
  <section class="py-12">
    <div class="container">
      <header class="mb-12">
        <a href="/blog" class="text-teal-600 hover:underline mb-4 inline-block">
          <i class="fas fa-arrow-left mr-2"></i>
          Zuru00fcck zu allen Beitru00e4gen
        </a>
        
        <div class="flex items-center mb-4">
          {currentCategory.icon && (
            <i class={`fas ${currentCategory.icon} text-teal-600 text-3xl mr-4`}></i>
          )}
          <h1 class="text-4xl font-bold">{currentCategory.name}</h1>
        </div>
        
        {currentCategory.description && (
          <p class="text-xl text-gray-600">{currentCategory.description}</p>
        )}
      </header>
      
      <!-- Categories -->
      <div class="flex flex-wrap gap-2 mb-8">
        <a 
          href="/blog" 
          class="px-4 py-2 rounded-full bg-gray-200 text-gray-800 font-medium hover:bg-gray-300 transition-colors"
        >
          Alle
        </a>
        
        {categories.map(category => (
          <a 
            href={`/blog/category/${category.slug}`}
            class={`px-4 py-2 rounded-full font-medium transition-colors ${category.slug === slug ? 'bg-teal-600 text-white' : 'bg-gray-200 text-gray-800 hover:bg-gray-300'}`}
          >
            {category.name}
          </a>
        ))}
      </div>
      
      <!-- Posts Grid -->
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map(post => (
            <PostCard
              title={post.title}
              slug={post.slug}
              excerpt={post.excerpt}
              image={post.image}
              category={post.category_name}
              categorySlug={post.category_slug}
              date={post.created_at}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-xl text-gray-600">Keine Beitru00e4ge in dieser Kategorie gefunden.</p>
        </div>
      )}
    </div>
  </section>
</MainLayout>