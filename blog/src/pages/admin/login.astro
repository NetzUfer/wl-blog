---
import MainLayout from '../../layouts/MainLayout.astro';

// Handle form submission
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email');
    const password = formData.get('password');
    
    // In a real app, you would validate credentials against the database
    // For now, we'll just redirect to the admin dashboard
    return Astro.redirect('/admin');
  } catch (error) {
    console.error('Error processing login:', error);
  }
}
---

<MainLayout title="Admin Login">
  <div class="min-h-[70vh] flex items-center justify-center py-12">
    <div class="max-w-md w-full space-y-8 p-8 card">
      <div class="text-center">
        <h1 class="text-3xl font-bold">Admin Login</h1>
        <p class="mt-2 text-gray-600">Melde dich an, um dein Blog zu verwalten</p>
      </div>
      
      <form class="mt-8 space-y-6" method="POST">
        <div class="space-y-4">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">E-Mail</label>
            <input
              id="email"
              name="email"
              type="email"
              required
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-teal-500 focus:border-teal-500"
              placeholder="admin@example.com"
            />
          </div>
          
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700">Passwort</label>
            <input
              id="password"
              name="password"
              type="password"
              required
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-teal-500 focus:border-teal-500"
            />
          </div>
        </div>
        
        <div>
          <button
            type="submit"
            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500"
          >
            Anmelden
          </button>
        </div>
      </form>
    </div>
  </div>
</MainLayout>